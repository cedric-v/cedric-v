{%- set testimonialsData = testimonials.testimonials -%}
{%- set locale = locale | default('fr') -%}

<div class="testimonials-container">
  <div class="testimonials-grid">
    {%- for testimonial in testimonialsData -%}
      {%- set text = testimonial.text[locale] -%}
      {%- set highlights = testimonial.highlights[locale] -%}
      
      <article class="testimonial-card">
        <div class="testimonial-header">
          <div class="testimonial-author">
            {%- if testimonial.author.image -%}
              <img 
                src="{{ testimonial.author.image | relativeUrl }}" 
                alt="{{ testimonial.author.name }}"
                class="testimonial-avatar"
                loading="lazy"
                width="48"
                height="48"
              >
            {%- else -%}
              <div class="testimonial-avatar testimonial-avatar-placeholder">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" fill="currentColor"/>
                  <path d="M12.0002 14.5C6.99016 14.5 2.91016 17.86 2.91016 22C2.91016 22.28 3.13016 22.5 3.41016 22.5H20.5902C20.8702 22.5 21.0902 22.28 21.0902 22C21.0902 17.86 17.0102 14.5 12.0002 14.5Z" fill="currentColor"/>
                </svg>
              </div>
            {%- endif -%}
            <div class="testimonial-author-info">
              <div class="testimonial-author-name">{{ testimonial.author.name }}</div>
              <div class="testimonial-rating">
                {%- for i in range(1, 6) -%}
                  <svg class="star-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor"/>
                  </svg>
                {%- endfor -%}
              </div>
            </div>
          </div>
          {%- if testimonial.googleReviewUrl -%}
            <a href="{{ testimonial.googleReviewUrl }}" target="_blank" rel="noopener noreferrer" class="testimonial-google-link" aria-label="Voir l'avis Google">
              <svg width="20" height="20" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
            </a>
          {%- endif -%}
        </div>
        
        <div class="testimonial-content">
          {%- set paragraphs = text | split('\n\n') -%}
          {%- for paragraph in paragraphs -%}
            {%- if paragraph -%}
              <p class="testimonial-text">
                {{ paragraph | safe }}
              </p>
            {%- endif -%}
          {%- endfor -%}
        </div>
        
        <div class="testimonial-footer">
          <time class="testimonial-date" datetime="{{ testimonial.date }}">{{ testimonial.date | date("d MMMM yyyy", locale) }}</time>
        </div>
      </article>
    {%- endfor -%}
  </div>
</div>
