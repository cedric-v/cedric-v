            <li class="footer-nav-item"><a href="{{ '/rdv/clarte/' | relativeUrl }}" class="footer-nav-link">RDV Clarté</a></li>
            <li class="footer-nav-item"><a href="{{ '/fr/site-web-rapide/' | relativeUrl }}" class="footer-nav-link">Conception de sites haute performance</a></li>
            <li class="footer-nav-item"><a href="{{ '/blog/' | relativeUrl }}" class="footer-nav-link">Blog</a></li>
            <li class="footer-nav-item"><a href="{{ '/contact/' | relativeUrl }}" class="footer-nav-link">Contact</a></li>
