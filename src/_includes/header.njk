<header id="main-header" class="site-header">
  <div class="header-container">
    {% if locale == 'en' %}
    <a href="{{ '/en/' | relativeUrl }}" class="header-logo">
    {% else %}
    <a href="{{ '/' | relativeUrl }}" class="header-logo">
    {% endif %}
      {% image "assets/img/new-logo-cedriv.png", "Fluance Pro", "", "eager", "", "400", "200" %}
      <span class="header-slogan">{% if locale == 'fr' %}Accompagnement pour entrepreneurs{% else %}Coaching for entrepreneurs{% endif %}</span>
    </a>

    <button class="mobile-menu-toggle" data-menu-toggle aria-label="Open menu">
      <svg class="mobile-menu-icon" fill="none" stroke="currentColor" stroke-width="1.7" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 7h16M4 12h16M4 17h16" />
      </svg>
    </button>

    <nav class="header-navigation" data-menu>
      <!-- A propos dropdown -->
      <div class="nav-dropdown">
        <button class="nav-dropdown-toggle">
          {% if locale == 'fr' %}A propos{% else %}About{% endif %}
          <svg class="dropdown-arrow-icon" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div class="nav-dropdown-menu">
          <div class="dropdown-content">
            {% if locale == 'en' %}
            <a href="{{ '/en/a-propos/philosophie/' | relativeUrl }}" class="dropdown-link">Philosophy</a>
            <a href="{{ '/en/a-propos/histoire-cedric/' | relativeUrl }}" class="dropdown-link">Cédric's Story</a>
            <a href="{{ '/en/a-propos/approche-fluance/' | relativeUrl }}" class="dropdown-link">Fluance Approach</a>
            {% else %}
            <a href="{{ '/a-propos/philosophie/' | relativeUrl }}" class="dropdown-link">Philosophie</a>
            <a href="{{ '/a-propos/histoire-cedric/' | relativeUrl }}" class="dropdown-link">Parcours de Cédric</a>
            <a href="{{ '/a-propos/approche-fluance/' | relativeUrl }}" class="dropdown-link">Approche Fluance Pro</a>
            {% endif %}
          </div>
        </div>
      </div>

      <!-- Accompagnement dropdown -->
      <div class="nav-dropdown">
        <button class="nav-dropdown-toggle">
          {% if locale == 'fr' %}Accompagnement{% else %}Coaching{% endif %}
          <svg class="dropdown-arrow-icon" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div class="nav-dropdown-menu large">
          <div class="dropdown-content">
            {% if locale == 'en' %}
            <a href="{{ '/en/accompagnement/individuel/' | relativeUrl }}" class="dropdown-link">Individual Coaching</a>
            <a href="{{ '/en/accompagnement/individuel/#testimonials' | relativeUrl }}" class="dropdown-link">What they say</a>
            <a href="{{ '/en/accompagnement/formules/' | relativeUrl }}" class="dropdown-link">Formulas</a>
            {% else %}
            <a href="{{ '/accompagnement/individuel/' | relativeUrl }}" class="dropdown-link">Accompagnement individuel</a>
            <a href="{{ '/accompagnement/individuel/#temoignages' | relativeUrl }}" class="dropdown-link">Ce qu'ils en disent</a>
            <a href="{{ '/accompagnement/formules/' | relativeUrl }}" class="dropdown-link">Formules</a>
            {% endif %}
          </div>
        </div>
      </div>

      {% if locale == 'en' %}
      <a href="{{ '/en/rdv/clarte/' | relativeUrl }}" class="nav-link">Clarity Meeting</a>
      {% else %}
      <a href="{{ '/rdv/clarte/' | relativeUrl }}" class="nav-link">RDV Clarté</a>
      {% endif %}

      {% if locale == 'en' %}
      <a href="{{ '/en/contact/' | relativeUrl }}" class="nav-link">Contact</a>
      {% else %}
      <a href="{{ '/contact/' | relativeUrl }}" class="nav-link">Contact</a>
      {% endif %}

      {% if locale == 'en' %}
      <a href="{{ '/en/fluance-particuliers/' | relativeUrl }}" class="nav-link nav-separator">Fluance Individuals</a>
      {% else %}
      <a href="{{ '/fluance-particuliers/' | relativeUrl }}" class="nav-link nav-separator">Fluance particuliers</a>
      {% endif %}
      
      <div class="language-selector">
        {% if locale == 'fr' %}
          <span class="language-current">FR</span>
          {% set currentUrl = page.url %}
          {% if currentUrl == '/' %}
            {% set targetUrl = '/en/' %}
          {% elif currentUrl == '/contact/' %}
            {% set targetUrl = '/en/contact/' %}
          {% elif currentUrl == '/fluance-particuliers/' %}
            {% set targetUrl = '/en/fluance-particuliers/' %}
          {% elif currentUrl == '/connexion/' %}
            {% set targetUrl = '/en/connexion/' %}
          {% elif currentUrl == '/cadeau/' %}
            {% set targetUrl = '/en/cadeau/' %}
          {% elif currentUrl == '/confirmation/' %}
            {% set targetUrl = '/en/confirmation/' %}
          {% else %}
            {% set cleanUrl = currentUrl | replace('/fr/', '/') %}
            {% if cleanUrl == '/' %}
              {% set targetUrl = '/en/' %}
            {% else %}
              {% set targetUrl = '/en' + cleanUrl %}
            {% endif %}
          {% endif %}
          <a href="{{ targetUrl | relativeUrl }}" class="language-link">EN</a>
        {% else %}
          {% set currentUrl = page.url %}
          {% if currentUrl == '/en/' %}
            {% set targetUrl = '/' %}
          {% else %}
            {% set targetUrl = currentUrl | replace('/en/', '/') %}
          {% endif %}
          <a href="{{ targetUrl | relativeUrl }}" class="language-link">FR</a>
          <span class="language-current">EN</span>
        {% endif %}
      </div>
        </nav>
  </div>

  <!-- Mobile menu -->
  <nav class="mobile-navigation" data-menu-mobile>
    <div class="mobile-nav-section">
      <button class="mobile-dropdown-toggle" data-mobile-dropdown="a-propos">
        {% if locale == 'fr' %}A propos{% else %}About{% endif %}
        <svg class="mobile-dropdown-arrow" data-arrow="a-propos" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      <div class="mobile-dropdown-content" data-dropdown-content="a-propos">
        {% if locale == 'en' %}
        <a href="{{ '/en/a-propos/philosophie/' | relativeUrl }}" class="mobile-nav-link">Philosophy</a>
        <a href="{{ '/en/a-propos/histoire-cedric/' | relativeUrl }}" class="mobile-nav-link">Cédric's Story</a>
        <a href="{{ '/en/a-propos/approche-fluance/' | relativeUrl }}" class="mobile-nav-link">Fluance Approach</a>
        {% else %}
        <a href="{{ '/a-propos/philosophie/' | relativeUrl }}" class="mobile-nav-link">Philosophie</a>
        <a href="{{ '/a-propos/histoire-cedric/' | relativeUrl }}" class="mobile-nav-link">Parcours de Cédric</a>
        <a href="{{ '/a-propos/approche-fluance/' | relativeUrl }}" class="mobile-nav-link">Approche Fluance Pro</a>
        {% endif %}
      </div>
    </div>

    <div class="mobile-nav-section">
      <button class="mobile-dropdown-toggle" data-mobile-dropdown="accompagnement">
        {% if locale == 'fr' %}Accompagnement{% else %}Coaching{% endif %}
        <svg class="mobile-dropdown-arrow" data-arrow="accompagnement" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      <div class="mobile-dropdown-content" data-dropdown-content="accompagnement">
        {% if locale == 'en' %}
        <a href="{{ '/en/accompagnement/individuel/' | relativeUrl }}" class="mobile-nav-link">Individual Coaching</a>
        <a href="{{ '/en/accompagnement/individuel/#testimonials' | relativeUrl }}" class="mobile-nav-link">What they say</a>
        <a href="{{ '/en/accompagnement/formules/' | relativeUrl }}" class="mobile-nav-link">Formulas</a>
        {% else %}
        <a href="{{ '/accompagnement/individuel/' | relativeUrl }}" class="mobile-nav-link">Accompagnement individuel</a>
        <a href="{{ '/accompagnement/individuel/#temoignages' | relativeUrl }}" class="mobile-nav-link">Ce qu'ils en disent</a>
        <a href="{{ '/accompagnement/formules/' | relativeUrl }}" class="mobile-nav-link">Formules</a>
        {% endif %}
      </div>
    </div>

    {% if locale == 'en' %}
    <a href="{{ '/en/rdv/clarte/' | relativeUrl }}" class="mobile-nav-link">Clarity Meeting</a>
    {% else %}
    <a href="{{ '/rdv/clarte/' | relativeUrl }}" class="mobile-nav-link">RDV Clarté</a>
    {% endif %}

    {% if locale == 'en' %}
    <a href="{{ '/en/contact/' | relativeUrl }}" class="mobile-nav-link">Contact</a>
    {% else %}
    <a href="{{ '/contact/' | relativeUrl }}" class="mobile-nav-link">Contact</a>
    {% endif %}
    
    <div class="mobile-nav-separator"></div>

    {% if locale == 'en' %}
    <a href="{{ '/en/fluance-particuliers/' | relativeUrl }}" class="mobile-nav-link">Fluance Individuals</a>
    {% else %}
    <a href="{{ '/fluance-particuliers/' | relativeUrl }}" class="mobile-nav-link">Fluance particuliers</a>
    {% endif %}
    
    <div class="mobile-language-selector">
        {% if locale == 'fr' %}
          <span class="language-current">FR</span>
          <span class="mobile-language-separator">|</span>
          {% set currentUrl = page.url %}
        {% if currentUrl == '/' %}
          {% set targetUrl = '/en/' %}
        {% elif currentUrl == '/contact/' %}
          {% set targetUrl = '/en/contact/' %}
        {% elif currentUrl == '/fluance-particuliers/' %}
          {% set targetUrl = '/en/fluance-particuliers/' %}
        {% elif currentUrl == '/connexion/' %}
          {% set targetUrl = '/en/connexion/' %}
        {% elif currentUrl == '/cadeau/' %}
          {% set targetUrl = '/en/cadeau/' %}
        {% elif currentUrl == '/confirmation/' %}
          {% set targetUrl = '/en/confirmation/' %}
        {% else %}
          {% set cleanUrl = currentUrl | replace('/fr/', '/') %}
          {% if cleanUrl == '/' %}
            {% set targetUrl = '/en/' %}
          {% else %}
            {% set targetUrl = '/en' + cleanUrl %}
          {% endif %}
        {% endif %}
          <a href="{{ targetUrl | relativeUrl }}" class="language-link">EN</a>
      {% else %}
        {% set currentUrl = page.url %}
        {% if currentUrl == '/en/' %}
          {% set targetUrl = '/' %}
        {% else %}
          {% set targetUrl = currentUrl | replace('/en/', '/') %}
        {% endif %}
        <a href="{{ targetUrl | relativeUrl }}" class="language-link">FR</a>
        <span class="mobile-language-separator">|</span>
        <span class="language-current">EN</span>
      {% endif %}
    </div>
  </nav>
</header>
